	<!-- 검색결과에 따른 아파트 목록 불러오기 -->
	
	<select id ="getAptInfoInDong" parameterType="map" resultType = "houseInfoDto">
	 select *
	 from houseinfo
	 where dongCode = #{dongCode}
	 <if test="apartName != null and apartName != ''">
	  	and apartmentName like concat('%', #{apartName}, '%')
     </if>	
